package org.example;


public class Main {
    public static void main(String[] args) {

        String[][] speed = {{"128km", "135km", "139km"},{"155km", "129km", "175km"}, {"129km", "130km", "185km"}, {"195km", "155km", "221km"}};
        String [] city = {"JHB", "DBN", "CTN", "PE"};
        String [] month = {"JAN", "FEB", "MAR"};


        System.out.println("**********************************************");
        System.out.println("SPEEDING FINES REPORT");
        System.out.println("**********************************************");

        System.out.printf("%-10s%-10s%-10s%-10s".formatted(" ", month[0], month[1], month[2]) + "\n");

        for (int i = 0; i < city.length; i++) {
                System.out.printf("%-10s%-10s%-10s%-10s".formatted(city[i], speed[i][0], speed[i][1], speed[i][2]) + "\n");
        }


        System.out.println("**********************************************");
        System.out.println("SPEEDING FINE STATISTICS");
        System.out.println("**********************************************");

        System.out.println("Maximum speed captured: " + speed[3][2]);
        System.out.println("Minimum speed captured: " + speed[0][0]);
        System.out.println("**********************************************" + "\n");
    }


}
